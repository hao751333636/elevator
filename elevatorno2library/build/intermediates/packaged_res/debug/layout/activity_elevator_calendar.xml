<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.ElevatorCalendarActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingTop="30dp"
        android:paddingBottom="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="5月18日"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvDateCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tvStartDate"
            app:layout_constraintBottom_toBottomOf="@+id/tvEndDate"
            android:text="7天"
            android:textSize="14sp"
            android:textColor="#2b8bae"
            app:layout_constraintLeft_toRightOf="@+id/tvStartDate"
            app:layout_constraintRight_toLeftOf="@+id/tvEndDate"/>

        <TextView
            android:id="@+id/tvEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="5月25日"
            android:textColor="#000"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@+id/tvStartDate"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#000"
            android:layout_marginTop="20dp"/>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#f3f2f8"
        android:text="*7天内的保养计划"
        android:gravity="center_vertical"
        android:textColor="#ca3524"
        android:textSize="16sp"
        android:paddingLeft="15dp"/>

</LinearLayout>