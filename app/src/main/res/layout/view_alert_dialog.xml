<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/normal_padding">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/small_padding"
        android:text="@string/label_none"
        android:textColor="@color/c_text"
        android:textSize="@dimen/dimen_18sp" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/small_padding"
        android:text="@string/label_none"
        android:textColor="@color/c_text_dark1" />

    <include layout="@layout/view_divider_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bCancel"
            style="@style/AlertCancelButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dimen_10"
            android:text="@string/action_cancel" />

        <include
            android:id="@+id/divider"
            layout="@layout/view_divider_v" />

        <Button
            android:id="@+id/bConfirm"
            style="@style/AlertConfirmButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dimen_10"
            android:text="@string/action_confirm" />

    </LinearLayout>

</LinearLayout>