<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drawable_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:background="@color/actionbar">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/actionbar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_16"
            android:text="维修记录详情"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.baidu.mapapi.map.TextureMapView
                android:id="@+id/bmapView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_200" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_record_details_people"
                    android:drawablePadding="@dimen/dimen_5"
                    android:gravity="center_vertical"
                    android:text="维修人员："
                    android:textColor="@color/tab_gray"
                    android:textSize="@dimen/dimen_14sp" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black3"
                    android:textSize="@dimen/dimen_14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="?android:actionBarDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_record_details_repair_time"
                    android:drawablePadding="@dimen/dimen_5"
                    android:gravity="center_vertical"
                    android:text="维修日期："
                    android:textColor="@color/tab_gray"
                    android:textSize="@dimen/dimen_14sp" />

                <TextView
                    android:id="@+id/tvCreateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black3"
                    android:textSize="@dimen/dimen_14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="?android:actionBarDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_record_details_content"
                    android:drawablePadding="@dimen/dimen_5"
                    android:gravity="center_vertical"
                    android:text="维修内容："
                    android:textColor="@color/tab_gray"
                    android:textSize="@dimen/dimen_14sp" />

                <TextView
                    android:id="@+id/tvRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black3"
                    android:textSize="@dimen/dimen_14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_5"
                android:background="@color/drawable_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_repair_front"
                    android:drawablePadding="@dimen/dimen_5"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen_10"
                    android:text="维修前照片"
                    android:textColor="@color/tab_gray"
                    android:textSize="@dimen/dimen_14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivBeforePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_230"
                    android:layout_marginLeft="@dimen/dimen_50"
                    android:layout_marginRight="@dimen/dimen_50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_repair_after"
                    android:drawablePadding="@dimen/dimen_5"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen_10"
                    android:text="维修后照片"
                    android:textColor="@color/tab_gray"
                    android:textSize="@dimen/dimen_14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivAfterPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_230"
                    android:layout_marginLeft="@dimen/dimen_50"
                    android:layout_marginRight="@dimen/dimen_50" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>