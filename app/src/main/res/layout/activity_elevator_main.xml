<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drawable_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:background="@color/actionbar"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/actionbar_back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_16"
            android:text="智慧电梯管理平台"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tabPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <include layout="@layout/view_divider_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="#FDFDFD"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlRescue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivRescue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_tab_help_sel" />

            <TextView
                android:id="@+id/tvRescue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivRescue"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_1"
                android:text="救援"
                android:textColor="@color/actionbar"
                android:textSize="@dimen/dimen_13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlBusiness"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivBusiness"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_tab_business" />

            <TextView
                android:id="@+id/tvBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivBusiness"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_1"
                android:text="业务"
                android:textColor="@color/tab_gray"
                android:textSize="@dimen/dimen_13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMonitor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivMonitor"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_tab_monitor" />

            <TextView
                android:id="@+id/tvMonitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivMonitor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_1"
                android:text="四维监控"
                android:textColor="@color/tab_gray"
                android:textSize="@dimen/dimen_13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivMy"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_tab_me" />

            <TextView
                android:id="@+id/tvMy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivMy"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_1"
                android:text="我的"
                android:textColor="@color/tab_gray"
                android:textSize="@dimen/dimen_13sp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>