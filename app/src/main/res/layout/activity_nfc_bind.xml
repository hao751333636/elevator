<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:background="@color/actionbar">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/actionbar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_16"
            android:text="NFC标签绑定"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bSearch"
            android:layout_width="@dimen/dimen_46"
            android:layout_height="@dimen/dimen_28"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@drawable/btn_white"
            android:text="提交"
            android:textSize="@dimen/dimen_14sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_10"
                    android:text="安装日期"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/dimen_14sp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="请选择安装日期"
                    android:padding="@dimen/dimen_10"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/dimen_14sp" />

                <ImageView
                    android:layout_width="@dimen/dimen_22"
                    android:layout_height="@dimen/dimen_22"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:src="@mipmap/ic_arrow_right" />

            </LinearLayout>

            <include layout="@layout/view_divider_h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_10"
                    android:text="产品编码"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/dimen_14sp" />

                <EditText
                    android:id="@+id/etBrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="请输入产品编码"
                    android:inputType="text"
                    android:padding="@dimen/dimen_10"
                    android:textSize="@dimen/dimen_14sp" />
            </LinearLayout>
            ic_arrow_right
            <include layout="@layout/view_divider_h" />ic_arrow_right

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_10"
                    android:text="配件型号"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/dimen_14sp" />

                <EditText
                    android:id="@+id/etModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="请输入配件型号"
                    android:inputType="text"
                    android:padding="@dimen/dimen_10"
                    android:textSize="@dimen/dimen_14sp" />
            </LinearLayout>

            <include layout="@layout/view_divider_h" />

            <TextView
                android:id="@+id/tvDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10" />


            <RelativeLayout
                android:layout_width="@dimen/dimen_300"
                android:layout_height="@dimen/dimen_450"
                android:layout_gravity="center"
                android:background="@mipmap/ic_nfc_bind_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNfcType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:layout_marginRight="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_130"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/btn_green_dark"
                    android:textSize="@dimen/dimen_20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNfcType"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:layout_marginRight="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:lineSpacingExtra="@dimen/dimen_5"
                    android:text=""
                    android:textColor="@color/black1" />

                <ImageView
                    android:id="@+id/ivPhoto"
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="@dimen/dimen_80"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_100"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@mipmap/ic_repair_photo"
                    android:scaleType="centerCrop" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>