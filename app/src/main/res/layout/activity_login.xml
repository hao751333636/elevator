<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar">

    <ImageView
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_200"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_47"
        android:src="@mipmap/login" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/dimen_280"
        android:layout_height="@dimen/dimen_120"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_150"
        android:background="@drawable/radius_conner_backgroud"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10"
                android:src="@mipmap/login_user" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="@dimen/dimen_40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="#5000" />

            <EditText
                android:id="@+id/etAccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@drawable/radius_conner_backgroud"
                android:hint=""
                android:text=""
                android:padding="@dimen/dimen_2" />
        </LinearLayout>
        <!--android:text="admin"-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="#5000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10"
                android:src="@mipmap/login_pwd"
                android:layout_centerVertical="true"/>

            <View
                android:id="@+id/view1"
                android:layout_width="0.2dp"
                android:layout_height="@dimen/dimen_40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="#5000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView"/>

            <ImageView
                android:id="@+id/ivCipherDisplay"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_10"
                android:src="@mipmap/login_cipher_hides"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <EditText
                android:id="@+id/etPwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@drawable/radius_conner_backgroud"
                android:hint=""
                android:inputType="textPassword"
                android:padding="@dimen/dimen_2"
                android:text=""
                android:layout_toRightOf="@+id/view1"
                android:layout_toLeftOf="@+id/ivCipherDisplay"/>
            <!--android:text="lnsinodom"-->

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bLogin"
        android:layout_width="@dimen/dimen_280"
        android:layout_height="@dimen/dimen_40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_80"
        android:background="@drawable/radius_conner_backgroud"
        android:gravity="center"
        android:text="登录"
        android:textSize="@dimen/dimen_22sp" />

</RelativeLayout>