<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_8">

    <TextView
        android:id="@+id/mItemEleListTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.这是标题"
        android:textColor="@color/black1"
        android:textSize="@dimen/dimen_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tiny_padding"
        android:background="@drawable/radius_conner_listbackgrout3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llNfcType"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_conner_listbackgrout4"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_8">

            <ImageView
                android:id="@+id/ivNfcType"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:background="@mipmap/ic_nfc_label9" />

            <TextView
                android:id="@+id/tvNfcType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NFC标签"
                android:textColor="@color/black1"
                android:textSize="@dimen/dimen_13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llQualified"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_8">

            <TextView
                android:id="@+id/tvQualified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8"
                android:text="合格"
                android:textColor="@color/black1"
                android:textSize="@dimen/dimen_14sp" />

            <ImageView
                android:id="@+id/ivQualified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:src="@mipmap/qualified" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llUnqualified"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8"
                android:text="不合格"
                android:textColor="@color/black1"
                android:textSize="@dimen/dimen_14sp" />

            <ImageView
                android:id="@+id/ivUnqualified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:src="@mipmap/qualified" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_8"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8"
                android:text="不合格"
                android:textColor="@color/black1"
                android:textSize="@dimen/dimen_14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qualified" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_margin">

        <ImageView
            android:id="@+id/ivPictures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/tiny_padding"
            android:src="@mipmap/ic_camera" />

        <EditText
            android:id="@+id/mItemEleListEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivPictures"
            android:background="@drawable/radius_conner_backgroud2"
            android:hint="写下您的意见"
            android:maxLength="255"
            android:padding="@dimen/normal_margin"
            android:textColor="@color/black1"
            android:textSize="@dimen/dimen_14sp" />


    </RelativeLayout>


</LinearLayout>