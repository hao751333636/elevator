<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:background="@color/actionbar">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/actionbar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_16"
            android:text="NFC标签扫描"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivScanning"
            android:layout_width="@dimen/max_padding"
            android:layout_height="@dimen/max_padding"
            android:src="@mipmap/camera"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/large_margin"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvDevice"
            android:layout_width="match_parent"
            android:padding="@dimen/dimen_10"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_width="@dimen/dimen_300"
            android:layout_height="@dimen/dimen_450"
            android:layout_centerInParent="true"
            android:background="@mipmap/ic_nfc_bind_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNfcType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_150"
                android:gravity="center"
                android:text="NFC类型1"
                android:textColor="@color/btn_green_dark"
                android:textSize="@dimen/dimen_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNfcType"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_20"
                android:lineSpacingExtra="@dimen/dimen_8"
                android:text="NFC英文全称Near Field Commu-nication，近距离无线通信。是由飞利浦公司发起，由诺基亚、索尼等著名厂商联合主推的一项无线技术。"
                android:textColor="@color/black1" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>