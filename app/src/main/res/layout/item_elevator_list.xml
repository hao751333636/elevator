<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_ele_list_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5"
            android:text="title"
            android:textSize="@dimen/dimen_20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black3" />

        <TextView
            android:id="@+id/item_ele_radio_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5"
            android:text="A、合格"
            android:textColor="@color/video_bg"
            android:textSize="@dimen/dimen_18sp" />

        <TextView
            android:id="@+id/item_ele_radio_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5"
            android:text="B、不合格"
            android:textColor="@color/video_bg"
            android:textSize="@dimen/dimen_18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black3" />

        <EditText
            android:id="@+id/item_ele_list_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="写下您的意见"
            android:background="@drawable/radius_conner_backgroud"
            android:layout_margin="@dimen/dimen_5"
            android:textSize="@dimen/dimen_18sp"
            android:maxLength="255"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_padding"
                android:text="查看"
                android:textSize="@dimen/dimen_18sp" />

            <TextView
                android:id="@+id/tvSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/normal_padding"
                android:text="提交"
                android:textSize="@dimen/dimen_18sp" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>