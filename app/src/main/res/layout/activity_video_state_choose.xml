<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_call_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="100dp"
        android:src="@mipmap/ic_call_bg_middle" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llReceive"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="请求视频通话"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_14sp" />

    <LinearLayout
        android:id="@+id/llReceive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dimen_20"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_80"
            android:drawablePadding="@dimen/dimen_5"
            android:drawableTop="@mipmap/ic_call_receive"
            android:gravity="center_horizontal"
            android:text="接听"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14" />

        <TextView
            android:id="@+id/bUnReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dimen_5"
            android:drawableTop="@mipmap/ic_call_unreceive"
            android:gravity="center_horizontal"
            android:text="挂断"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14" />
    </LinearLayout>
</RelativeLayout>